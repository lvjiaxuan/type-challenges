{

  // https://bun.sh/docs/typescript#suggested-compileroptions
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "moduleDetection": "force",
    "module": "ESNext",

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,

    // Best practices
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    // "noUnusedLocals": true, only close for this project
    // "noUnusedParameters": true, only close for this project
    "noPropertyAccessFromIndexSignature": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
